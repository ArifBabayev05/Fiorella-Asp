@model List<Expert>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experts</h4>
            <div class="d-flex justify-content-between my-3">
                <a asp-area="admin" asp-action="index" asp-controller="dashboard" class="btn btn-secondary">Go Back</a>
                <a asp-area="admin" asp-action="create" asp-controller="experts" class="btn btn-success">Create</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Fullname
                            </th>
                           
                            <th>
                                Position
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expert in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/uploads/images/@expert.Image.Name" alt="image" />
                                </td>
                                <td>
                                    @expert.FullName
                                </td>
                                <td>
                                    @foreach (var ep in expert.ExpertPositions)
                                        {
                                            <span>@ep.Position.Name</span>
                                        }
                                </td>
                                @*<td>
                                    @expert.Count
                                </td>
                                <td>
                                    @expert.Category.Name
                                </td>*@
                                <td>
                                    <a asp-area="admin" asp-action="details" asp-controller="products" asp-route-id="@expert.Id" class="btn btn-primary">Details</a>
                                    <a asp-area="admin" asp-action="update" asp-controller="products" asp-route-id="@expert.Id" class="btn btn-warning">Update</a>
                                    <a asp-area="admin" asp-action="delete" asp-controller="products" asp-route-id="@expert.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>